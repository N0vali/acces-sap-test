{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center py-5">
            <h1>Produits</h1>
        </div>

        <table class="table table-hover">
            <thead>
                <tr class="morph-shadow text-dark">
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">PriceExl</th>
                    <th scope="col">PriceAti</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                {% if loop.index % 2 == 0 %}
                    <tr class="morph-shadow-darker">
                {% else %}
                 <tr class="morph-shadow">
                {% endif %}
                    <td scope="row" class="align-middle p-4">{{ product.id }}</td>
                    <td scope="row" class="align-middle p-4">{{ product.name  }}</td>
                    <td scope="row" class="align-middle p-4">{{ product.priceExl }}</td>
                    <td scope="row" class="align-middle p-4">{{ product.priceAti }}</td>
                    <td scope="row" class="align-middle p-4">
                        <div class="btn-group" role="group">
                            <a  class="btn btn-secondary" href="{{ path('app_product_show', {'id': product.id}) }}">
                            <i class="fa-solid fa-eye text-info"></i>
                            </a>
                            <a class="btn btn-secondary"  href="{{ path('app_product_edit', {'id': product.id}) }}">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                            </a>
                        </div>
                    </td>
                </tr>
        
            {% else %}
                <tr class="morph-shadow-lighter">
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="row mt-5">
            <div class="col-4 mx-auto">
                <div class="d-grid gap-2">
                    <a class="btn btn-lg btn-secondary" href="{{ path('app_product_new') }}">Nouveau produit</a>
                </div>
            </div>    
        </div>
      </div>
{% endblock %}
