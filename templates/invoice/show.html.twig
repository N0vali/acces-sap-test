{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ invoice.designation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>PriceExl</th>
                <td>{{ invoice.priceExl }}</td>
            </tr>
            <tr>
                <th>PriceAti</th>
                <td>{{ invoice.priceAti }}</td>
            </tr>
               <tr>
                <th>Products</th>
                {% if  invoice.products|length > 0 %}
                <td>{{invoice.products|length}}</td>
                    {% for product in invoice.products %}
                    <td class="text-warning">{{ product.name }}</td>
                    {% endfor %}
                {% else %}
                <td class="text-danger">pas de produit</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
